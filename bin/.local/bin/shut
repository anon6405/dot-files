#!/bin/bash

RET=$(echo -e "shutdown\nreboot\nsleep\nlock\ncancel" | dmenu -l 5 -p "Sayonara" -nb "#000000" -nf "#bfbfbf" -sb "#84a0c6" -sf "#000000" -fn "Hermit:size=10:antialias=true:autohint=true")

case $RET in
	shutdown) doas poweroff ;;
	reboot) doas reboot ;;
	sleep) xset s activate & doas zzz;;
   	lock) xset s activate ;;
	*) ;;
esac
